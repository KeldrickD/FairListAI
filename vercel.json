{
  "buildCommand": "cd client && npm install --force && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --no-save",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
} 