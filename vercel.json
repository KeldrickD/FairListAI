{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=3072"
  },
  "routes": [
    {
      "source": "/api/listings/generate",
      "destination": "/api/listings/generate",
      "methods": ["POST"],
      "maxDuration": 60
    }
  ]
} 